<% include partials/main %>

    <head>
        
        <% include partials/title-meta %>

        <% include partials/head-css %>

    </head>

    <% include partials/body %>

        <!-- Begin page -->
        <div id="layout-wrapper">

            <% include partials/menu %> 

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <% include partials/page-title %>
                        <form action="/order-detail/<%=order._id %> " method="POST">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Thông tin chung</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3 row">
                                                    <label for="example-text-input" class="col-md-4 col-form-label">Mã đơn hàng</label>
                                                    <div class="col-md-8">
                                                        <input class="form-control" type="text" value="<%= order._id %> " id="example-text-input" disabled>
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="example-text-input" class="col-md-4 col-form-label">Tên khách hàng</label>
                                                    <div class="col-md-8">
                                                        <input class="form-control" type="text" value="<%= order.name %>" id="example-text-input" disabled>
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="example-text-input" class="col-md-4 col-form-label">Địa chỉ</label>
                                                    <div class="col-md-8">
                                                        <input class="form-control" type="text" value="<%= order.address %>" id="example-text-input" disabled>
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="example-tel-input" class="col-md-4 col-form-label">Số điện thoại</label>
                                                    <div class="col-md-8">
                                                        <input class="form-control" type="text" value="<%= order.phoneNumber %>" id="example-tel-input" disabled>
                                                    </div>
                                                </div>
                                                <div class="mb-3 row">
                                                    <label for="example-text-input" class="col-md-4 col-form-label">Ngày đặt hàng</label>
                                                    <div class="col-md-8">
                                                        <input class="form-control" type="text" value="<%= order.date  %>" id="example-text-input" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="card">
                                                            <div class="card-body">
                                                                <h4 class="card-title">Xác nhận đơn hàng</h4>
                                                                <form class="row row-cols-lg-auto g-3 align-items-center">
                                                                    <div class="col-12">
                                                                        <label class="visually-hidden" for="inlineFormInputGroupUsername">Trạng thái</label>
                                                                        <div class="input-group">
                                                                            <input type="text" class="alert alert-warning" role="alert" id="inlineFormInputGroupUsername" placeholder="<%= order.status %> " disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-12 mb-3">
                                                                        <div class="form-group">
                                                                            <label for="status">Trạng thái</label>
                                                                            <select class="form-control select2" name="status">
                                                                                <option value="Đang chờ xác nhận">Đang chờ xác nhận</option>
                                                                                <option value="Đang giao hàng">Đang giao hàng</option>
                                                                                <option value="Đã giao hàng">Đã giao hàng</option>
                                                                                <option value="Đã giao hàng">Hủy đơn hàng</option>
                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-12">
                                                                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                                                                        
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">Chi tiết đơn hàng</h4>
                                        <% order.products && order.products.forEach((product) => { %> 
                                        <div class="col-lg-6">
                                            <div class="card">
                                                <div class="row g-0 align-items-center">
                                                    <div class="col-md-4">
                                                        <img class="card-img img-fluid" src="<%= product.productImage %> " alt="Card image">
                                                    </div>
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <h5 class="card-title"><%=product.productName %></h5>
                                                            <p class="card-text">Mã sản phẩm: <%=product.productGtin %></p>
                                                            <p class="card-text">Size: <%=product.size %></p>
                                                            <p class="card-text">Giá: <%= product.productPrice %></p>
                                                            <p class="card-text">Số lượng: <%= product.quantity %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                        <div class="row">
                                            <div class="col-md-4"></div>
                                            <div class="col-md-8">Tổng giá trị: <%= order.products ? order.products.reduce((total, product) => total + parseFloat(product.productPrice, 10), 0) : '0' %></div>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                            
                        </div>
                        </form>
                        <!-- end row -->

        <% include partials/right-sidebar %>

        <% include partials/vendor-scripts %>

        <script src="/assets/js/app.js"></script>

    </body>

</html>